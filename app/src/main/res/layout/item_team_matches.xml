<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".ui.">

    <TextView
        android:id="@+id/tVItemTeamMatchId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="MatchId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tVItemTeamMatchRadiantWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:layout_marginTop="16dp"
        android:text="IsRadiantWin"
        app:layout_constraintStart_toEndOf="@+id/tVItemTeamMatchId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tVItemTeamMatchRadiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:text="IsRadiant"
        app:layout_constraintStart_toEndOf="@+id/tVItemTeamMatchLeagueName"
        app:layout_constraintTop_toBottomOf="@+id/tVItemTeamMatchDuration" />

    <TextView
        android:id="@+id/tVItemTeamMatchDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:text="MatchDuration"
        app:layout_constraintStart_toEndOf="@+id/tVItemTeamMatchStartTime"
        app:layout_constraintTop_toBottomOf="@+id/tVItemTeamMatchRadiantWin" />

    <TextView
        android:id="@+id/tVItemTeamMatchStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="MatchStartTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tVItemTeamMatchId" />

    <TextView
        android:id="@+id/tVItemTeamMatchLeagueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="LeagueName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tVItemTeamMatchStartTime" />

    <TextView
        android:id="@+id/tVItemTeamMatchOppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:text="OppName"
        app:layout_constraintStart_toEndOf="@+id/tVItemTeamMatchRadiant"
        app:layout_constraintTop_toBottomOf="@+id/tVItemTeamMatchOppLogo" />

    <ImageView
        android:id="@+id/tVItemTeamMatchOppLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@+id/tVItemTeamMatchDuration"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>