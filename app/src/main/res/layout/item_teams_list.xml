<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <ImageButton
        android:id="@+id/iBTeamIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/main_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tVTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:text="Team name"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/iBTeamIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tVTeamLosses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="40dp"
        android:text="@string/item_teams_tVTeamLosses"
        android:textColor="@color/items_team_list_tVTeamLosses"
        app:layout_constraintStart_toEndOf="@+id/iBTeamIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tVTeamLastMatchTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:text="Last match time"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/iBTeamIcon"
        app:layout_constraintTop_toBottomOf="@+id/tVTeamName" />

    <TextView
        android:id="@+id/tVTeamWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="40dp"
        android:text="Wins"
        android:textColor="@color/items_team_list_tVTeamWins"
        app:layout_constraintStart_toEndOf="@+id/iBTeamIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tVTeamRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="29dp"
        android:text="Rating"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>